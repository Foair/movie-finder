extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 电影名
            th 导演
            th 国家
            th 上映年份
            th 录入时间
            th 更新时间
            th 查看
            th 修改
            th 删除
        tbody
          each item in movies
            tr(class="item-id-#{item._id}")
              td #{item.title}
              td #{item.director}
              td #{item.country}
              td #{item.year}
              td #{moment(item.meta.createAt).format('YYYY-MM-DD HH:mm')}
              td #{moment(item.meta.updateAt).format('YYYY-MM-DD HH:mm')}
              td: a(target="_black", href="../movie/#{item._id}") 查看
              td: a(target="_black", href="../admin/update/#{item._id}") 修改
              td
                button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
  script(src="/js/admin.js")
